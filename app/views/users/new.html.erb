<div class="container">
  <div class="row">
    <%= form_for @user do |f| %>
      <div>
        <%= f.text_field :username, placeholder: "username" %>
      </div>

      <div>
        <%= f.text_field :email, placeholder: "email" %>
      </div>

      <div>
        <%= f.text_field :current_city, placeholder: "where you from?" %>
      </div>

      <div>
        <%= f.password_field :password, placeholder: "password" %>
      </div>
      <div>
        <%= f.submit "Sign UP!" %>
      </div>
    <% end %>
  </div>
</div>
